                <th field="CHECKERNAME" width="60">审核人员</th>
                <th field="CHECK_DATE" width="90">审核日期</th>
                <th field="REASON" width="90">补料原因</th>
                <th field="STATE" width="90"  hidden="true">状态</th>
                <th field="STATE_DESC" width="90">状态</th>
